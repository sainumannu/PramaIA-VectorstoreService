# Configurazione del server VectorstoreService
HOST=0.0.0.0
PORT=8090
LOG_LEVEL=INFO

# Configurazione ChromaDB
# Se stai usando un'istanza locale di ChromaDB:
CHROMA_HOST=localhost
CHROMA_PORT=8000
# Se stai usando ChromaDB in modalit√† persistente in-process:
# CHROMA_PERSISTENCE_DIRECTORY=./data/chroma

# Configurazione Scheduler per la riconciliazione
SCHEDULE_ENABLED=True
SCHEDULE_TIME=03:00  # Orario di esecuzione delle riconciliazioni pianificate

# Configurazione Database per la persistenza delle informazioni
# SQLite (per sviluppo/testing):
DATABASE_URL=sqlite:///./vectorstore_service.db
# PostgreSQL (per produzione):
# DATABASE_URL=postgresql://username:password@localhost:5432/vectorstore_service

# Configurazione PramaIA-LogService
# Dovrebbe puntare all'istanza esistente del LogService nel tuo ambiente
PRAMAIALOG_HOST=http://localhost:8081
# Usa la stessa API key configurata nel LogService o una dedicata per questo servizio
PRAMAIALOG_API_KEY=vectorstore_service_key

# Impostazioni di sicurezza
# Se usi un sistema di autenticazione, puoi configurare una chiave API per proteggere le API
API_KEY=your_secure_api_key_here
# Oppure se usi JWT:
# JWT_SECRET=your_jwt_secret_here

# Configurazioni avanzate
# Numero massimo di thread per operazioni di riconciliazione
MAX_WORKER_THREADS=4
# Dimensione massima dei batch per operazioni di riconciliazione
BATCH_SIZE=100
# Timeout per le operazioni sul vectorstore (in secondi)
VECTORSTORE_TIMEOUT=30
